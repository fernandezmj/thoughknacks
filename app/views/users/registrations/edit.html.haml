.container
  .row.centered-form
    .col-xs-12.col-sm-8.col-md-4.col-sm-offset-2.col-md-offset-4
      .panel.panel-default
        .panel-heading
          .panel-heading
          .h1.panel-title
            %h1 Update profile
          .panel-body
            .row
              .col-xs-6.col-sm-6.col-md-12
                %h2
                = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
                  = devise_error_messages!
                  .field
                    = f.label "First name"
                    = f.text_field :first_name, class: 'form-control input-sm'
                  .field
                    = f.label "Last name"
                    = f.text_field :last_name, class: 'form-control input-sm'
                  .field
                    = f.label :email
                    = f.email_field :email, autofocus: true, class: 'form-control input-sm'
                  .field
                    = f.label :birthday
                    = f.text_field :birthday, class: 'datepicker form-control input-sm'
                    - if devise_mapping.confirmable? && resource.pending_reconfirmation?
                      %div
                        Currently waiting confirmation for: #{resource.unconfirmed_email}
                    .field
                      = f.label :password
                      %i (leave blank if you don't want to change it)
                      %br/
                      = f.password_field :password, autocomplete: "off", class: 'form-control input-sm'
                    .field
                      = f.label :password_confirmation
                      %br/
                      = f.password_field :password_confirmation, autocomplete: "off", class: 'form-control input-sm'
                    .field
                      = f.label :current_password
                      %br/
                      = f.password_field :current_password, autocomplete: "off", class: 'form-control input-sm'
                      %hr
                    .actions
                      = f.submit "Update", class: 'btn btn-primary form-control input-sm'
                  = link_to "Cancel", :back, class: 'btn btn-primary form-control input-sm'