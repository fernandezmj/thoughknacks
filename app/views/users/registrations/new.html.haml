.container
  .row.centered-form
    .col-xs-12.col-sm-8.col-md-4.col-sm-offset-2.col-md-offset-4
      .panel.panel-default
        .panel-heading
          .panel-heading
          .h1.panel-title
            %h1 Sign up
          .panel-body
            .row
              .col-xs-6.col-sm-6.col-md-12
                = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
                  = devise_error_messages!
                  .field
                    = f.label "First name"
                    = f.text_field :first_name, class: 'form-control input-sm'
                  .field 
                    = f.label "Last name"
                    = f.text_field :last_name, class: 'form-control input-sm'
                  .field
                    = f.label :email
                    = f.email_field :email, autofocus: true, class: 'form-control input-sm'
                  .field
                    = f.label :birthday
                    = f.text_field :birthday, class: 'datepicker form-control input-sm'
                  .field
                    = f.label :password
                    - if @minimum_password_length
                      %em
                        (#{@minimum_password_length} characters minimum)
                    = f.password_field :password, autocomplete: "off", class: 'form-control input-sm'
                  .field
                    = f.label :password_confirmation
                    = f.password_field :password_confirmation, autocomplete: "off", class: 'form-control input-sm'
                    %hr
                  .actions
                    = f.submit "Sign up", class: 'btn btn-primary form-control input-sm'
                = link_to "Back", :back, class: 'btn btn-primary form-control input-sm'